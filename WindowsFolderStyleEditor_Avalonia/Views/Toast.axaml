<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:WindowsFolderStyleEditor_Avalonia.ViewModels"
             x:Class="WindowsFolderStyleEditor_Avalonia.Views.Toast"
             x:DataType="vm:MainViewModel"
             IsVisible="{Binding IsToastVisible}">
    <UserControl.Styles>
        <Style Selector="UserControl">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="RenderTransform" Value="translateY(10px)"/>
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.3" Easing="CubicEaseOut"/>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.3" Easing="CubicEaseOut"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="UserControl:visible">
            <Setter Property="Opacity" Value="1"/>
            <Setter Property="RenderTransform" Value="translateY(0)"/>
        </Style>
    </UserControl.Styles>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border Background="#CCFFFFFF"
                CornerRadius="20"
                Padding="24,10"
                Height="48"
                BoxShadow="0 4 12 0 #20000000">
            <TextBlock Text="{Binding ToastMessage}"
                       Foreground="#28a745"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
        </Border>
    </StackPanel>
</UserControl>