<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:FolderStyleEditorForWindows.ViewModels"
             x:Class="FolderStyleEditorForWindows.Views.Toast"
             x:DataType="vm:ToastViewModel"
             IsVisible="{Binding IsVisible}">
   <UserControl.Styles>
       <Style Selector="UserControl">
           <Setter Property="Opacity" Value="0"/>
           <Setter Property="RenderTransform" Value="scaleY(0.8)"/>
       </Style>
       <Style Selector="UserControl[IsVisible=true]">
           <Setter Property="Opacity" Value="1"/>
           <Setter Property="RenderTransform" Value="scaleY(1)"/>
       </Style>
   </UserControl.Styles>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border Background="#CCFFFFFF"
                CornerRadius="20"
                Padding="24,12">
            <TextBlock Text="{Binding Message}"
                       Foreground="{Binding Color}"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
        </Border>
    </StackPanel>
</UserControl>