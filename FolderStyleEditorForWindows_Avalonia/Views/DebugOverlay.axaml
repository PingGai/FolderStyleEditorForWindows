<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:FolderStyleEditorForWindows.ViewModels"
             xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Svg.Controls.Skia.Avalonia"
             xmlns:views="using:FolderStyleEditorForWindows.Views"
             x:Class="FolderStyleEditorForWindows.Views.DebugOverlay"
             x:DataType="vm:DebugOverlayViewModel"
             Margin="0"
             IsHitTestVisible="False">
    <Border Background="{Binding OverlayBackgroundBrush}"
            CornerRadius="6"
            Padding="6"
            MinWidth="32"
            MinHeight="32">
        <StackPanel Orientation="Horizontal"
                    Spacing="8"
                    VerticalAlignment="Center">
            <!-- SVG Test Component -->
            <Border Background="#66FFFFFF"
                    CornerRadius="4"
                    Padding="4"
                    MinWidth="32"
                    MinHeight="32"
                    IsVisible="{Binding ShowSvgTest}">
                <svg:Svg Width="32"
                         Height="32"
                         Stretch="Uniform"
                         Opacity="0.75"
                         Path="{Binding SvgTestPath}"
                         Css="{DynamicResource SvgCss}" />
            </Border>

            <!-- PNG Test Component -->
            <Border Background="#66FFFFFF"
                    CornerRadius="4"
                    Padding="4"
                    MinWidth="32"
                    MinHeight="32"
                    IsVisible="{Binding ShowPngTest}">
                <Image Source="{Binding PngTestImage}"
                       Width="32"
                       Height="32"
                       Stretch="Uniform"
                       RenderOptions.BitmapInterpolationMode="HighQuality" />
            </Border>

            <!-- Hover Icon Clone -->
            <Border Background="#66FFFFFF"
                    CornerRadius="4"
                    Padding="4"
                    MinWidth="32"
                    MinHeight="32"
                    IsVisible="{Binding ShowHoverIconClone}">
                <ContentControl Width="32"
                                Height="32">
                    <views:HoverIconAdorner DataContext="{Binding HoverIconClone}"
                                             IsHitTestVisible="False"
                                             IsVisible="True" />
                </ContentControl>
            </Border>
        </StackPanel>
    </Border>
</UserControl>