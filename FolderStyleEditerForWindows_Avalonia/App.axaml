<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:FolderStyleEditerForWindows"
             xmlns:vc="using:FolderStyleEditerForWindows.ValueConverters"
             xmlns:services="using:FolderStyleEditerForWindows.Services"
             x:Class="FolderStyleEditerForWindows.App"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Resources>
        <ResourceDictionary>
            <local:MathConverter x:Key="MathConverter"/>
            <vc:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
            <vc:PathDisplayConverter x:Key="PathDisplayConverter"/>
            <vc:FolderNameConverter x:Key="FolderNameConverter"/>

            <!-- Brushes -->
            <SolidColorBrush x:Key="SelectedBrush" Color="{StaticResource Accent}" Opacity="0.2"/>
            
            <!-- Colors -->
           <Color x:Key="Bg1">#FFFFFFFF</Color>
           <Color x:Key="Fg1">#303034</Color>
           <Color x:Key="Fg2">#606064</Color>
           <Color x:Key="Fg3">#878991</Color>
           <Color x:Key="Accent">#4C6EF5</Color>
           <Color x:Key="Danger">#E24A4A</Color>
           <Color x:Key="Ok">#3EAD70</Color>
           <Color x:Key="Line">#E6E6EB</Color>
           <Color x:Key="FolderTagBg">#E6F3FF</Color>
           <Color x:Key="FolderTagBorder">#8EB5E3</Color>
           <Color x:Key="FolderTagBgLight">#BFFFFFFF</Color>
           
          <SolidColorBrush x:Key="Bg1Brush" Color="{StaticResource Bg1}"/>
           <SolidColorBrush x:Key="Fg1Brush" Color="{StaticResource Fg1}"/>
           <SolidColorBrush x:Key="Fg2Brush" Color="{StaticResource Fg2}"/>
           <SolidColorBrush x:Key="Fg3Brush" Color="{StaticResource Fg3}"/>
           <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>
           <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Danger}"/>
           <SolidColorBrush x:Key="OkBrush" Color="{StaticResource Ok}"/>
           <SolidColorBrush x:Key="LineBrush" Color="{StaticResource Line}"/>
           <SolidColorBrush x:Key="FolderTagBgBrush" Color="{StaticResource FolderTagBg}"/>
           <SolidColorBrush x:Key="FolderTagBorderBrush" Color="{StaticResource FolderTagBorder}"/>
           <SolidColorBrush x:Key="FolderTagBgLightBrush" Color="{StaticResource FolderTagBgLight}"/>

           <!-- Glass Brushes -->
           <SolidColorBrush x:Key="GlassBrush" Color="#A6FFFFFF"/>
           <SolidColorBrush x:Key="GlassStrongBrush" Color="#D1FFFFFF"/>
           
           <!-- Corner Radii -->
           <CornerRadius x:Key="RadiusXl">6</CornerRadius>
           <CornerRadius x:Key="RadiusLg">16</CornerRadius>
           <CornerRadius x:Key="RadiusMd">12</CornerRadius>
           <CornerRadius x:Key="RadiusPill">999</CornerRadius>

           <!-- Box Shadows -->
           <BoxShadows x:Key="Shadow1">0 2 6 0 #0F000000, 0 10 30 0 #14000000</BoxShadows>
           <BoxShadows x:Key="ShadowHistory">0 1 3 0 #0A000000, 0 4 14 0 #0F000000</BoxShadows>
           <BoxShadows x:Key="Shadow2">0 6 16 0 #14000000, 0 18 50 0 #1F000000</BoxShadows>

       </ResourceDictionary>
   </Application.Resources>

   <Application.Styles>
       <FluentTheme />
       <StyleInclude Source="avares://FolderStyleEditerForWindows/Styles/ControlThemes.axaml"/>
   </Application.Styles>
</Application>